<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <UniformGrid Rows="3" Columns="3" Name="grid">
            <Button Click="Button_Click" Name="btn0"/>
            <Button Click="Button_Click" Name="btn1"/>
            <Button Click="Button_Click" Name="btn2"/>
            <Button Click="Button_Click" Name="btn3"/>
            <Button Click="Button_Click" Name="btn4"/>
            <Button Click="Button_Click" Name="btn5"/>
            <Button Click="Button_Click" Name="btn6"/>
            <Button Click="Button_Click" Name="btn7"/>
            <Button Click="Button_Click" Name="btn8"/>
        </UniformGrid>
        <Button Click="NewGame_Click" Content="New Game" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0"/>
        <TextBlock Name="resultText" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
    </Grid>
</Window>
